{
  "coc.source.file.ignorePatterns": [".turbo-cache"],
  "workspace.ignoredFolders": [
    "$HOME",
    ".turbo-cache"
  ],
  "coc.preferences.rootPatterns": [".git"],
  "snippets.ultisnips.directories": ["~/.config/nvim/UltiSnips"],
  "coc.source.buffer.ignoreGitignore": true,
  "snippets.ultisnips.enable": true,
  "coc.preferences.formatOnType": true,
  "tailwindCSS.headwind.runOnSave": false,
  "coc.preferences.formatOnTypeFiletypes": ["jsx", "js", "tsx", "ts", "json" ],
  "eslint.autoFixOnSave": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "typescript",
    "typescriptreact",
    "json",
    "graphql"
  ]
}
